{% extends 'layout.pug' %} {% block title %}{{ name }} {% endblock %}
{% block content %}
.mt-5.mb-5
 .columns
  .column.is-8.is-offset-2
   .title.is-2 Team Directory
   .subtitle.is-5 Click on the team to join and subscribe to topics
   p.block
     a.button.is-primary(href="{{url_for('pricing')}}")
       span.icon
         i.fas.fa-plus
       span Create a new team
   p.block
    span.text-icon
     span.icon
      i.fas.fa-globe
     span Public
    span.text-icon
     span.icon
      i.fas.fa-lock
     span Private

   .columns.is-multiline
    {% for team, member_count in teams %}
    {% if team.name != "_" %}
    .column.is-6
     a(href="{{url_for('show_team', team_name=team.name)}}").card-content.box
      .media
       .media-left
        figure.image.is48x48
         {% if team.is_public %}
         span.icon
          i.fas.fa-globe
         {% else %}
         span.icon
          i.fas.fa-lock
         {% endif %}
       .media-content
        .title.is-4 {{team.name}}
        .subtitle.is-6.mb-1 {{team.headline | default("")}}
        nav.level
         .level-left
          .level-item {{member_count}} members
    {% endif %}
    {% endfor %}
{% endblock %}

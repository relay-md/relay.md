{% extends 'layout.pug' %} {% block title %}{{ name }} {% endblock %}
{% block content %}
section.hero.is-link
 .hero-body
  .title
   figure.image.is-128x128
     img.is-rounded(src="{{user.profile_picture_url}}")
  .subtitle User Profile

.column
 section.section
  .title Account
  .subtitle Personal Information of your account
  table.table
   tr
    td
     span.icon-text
      span.icon
       i.fas.fa-user
      span username
    td {{user.username}}
   tr
    td
     span.icon-text
      span.icon
       i.fas.fa-user
      span Name
    td {{user.name}}
   tr
    td
     span.icon-text
      span.icon
       i.fas.fa-mailbox
      span email
    td {{user.email}}


 section.section
  .title API
  .subtitle Access Token
  table.table
   {% for access_token in user.access_tokens %}
   tr
    td
     span.icon-text
      span.icon
       i.fas.fa-key
      span
       tt {{access_token.token}}
   {% endfor %}
{% endblock %}

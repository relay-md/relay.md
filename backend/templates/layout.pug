  meta(property='og:url' content='https://relay.md')
  meta(property='og:site_name' content='Relay.md')

  meta(name='twitter:title' content='Relay.md: Share your markdown documents')
  meta(name='twitter:description' content='Simple collaboration with markdown. Obsidian plugin included')
  meta(name='twitter:url' content='https://relay.md')
  meta(name='twitter:card' content='summary')
  meta(name='twitter:image' content="{{ url_for('static', path='img/illustration-social.png') }}")

  link#favicon(rel='icon' type='image/x-icon' href='/static/img/favicon.ico')

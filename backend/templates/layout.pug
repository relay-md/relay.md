  meta(charset='utf-8')
  meta(http-equiv="content-language" content="en")
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name="description" content="Relay.md revolutionizes team collaboration by seamlessly merging the power of Obsidian, the markdown-based knowledge platform, with effortless document sharing. Our platform empowers Obsidian users to communicate and share markdown documents with members of their teams. By integrating with third-party platforms, Relay.md expands the reach beyond the Obsidian user base, ensuring wider accessibility for shared documents. Real-time collaboration and editing functionalities elevate the experience, making Relay.md the ultimate solution for team collaboration on markdown files.")

  meta(property='og:title' content='Relay.md: Share your markdown documents')
  meta(property='og:type' content='website')

doctype html
head
  meta(charset='utf-8')
  meta(http-equiv="content-language" content="en")
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(name="description" content="Relay your markdown files to your team members")

  link#favicon(rel='icon' type='image/x-icon' href='/static/img/favicon.ico')
  link(href="{{ url_for('static', path='css/main.css') }}" rel='stylesheet')

  title simple, efficient communication using markdown

 body
  {% include "navbar.pug" %}
  {% block content %}{% endblock %}
  {% include "footer.pug" %}

 script(src="{{ url_for('static', path='js/main.js') }}")
 script.
  var _paq = window._paq = window._paq || [];
  _paq.push(['trackPageView']);
  _paq.push(['enableLinkTracking']);
  (function() {
    var u="https://matomo.infra.chainsquad.com/";
    _paq.push(['setTrackerUrl', u+'matomo.php']);
    _paq.push(['setSiteId', '1']);
    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
    g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
  })();
 {% block javascript %}
 {% endblock %}

nav.navbar(role='navigation' aria-label='main navigation')
  .navbar-brand
    a.navbar-item(href='/')
      img.brand-logo(src="{{ url_for('static', path='img/logo-navbar.svg') }}" width='32' alt="relay.md navbar logo")
    a.navbar-burger(role='button' aria-label='menu' aria-expanded='false' data-target='navBarBurger')
      span(aria-hidden='true')
      span(aria-hidden='true')
      span(aria-hidden='true')
  #navBarBurger.navbar-menu
    .navbar-start
      .navbar-item.has-dropdown.is-hoverable
        .navbar-link Relay.md
        .navbar-dropdown
          a.navbar-item(href='/#features') Features
          a.navbar-item(href='/#howitworks') How it Works
          a.navbar-item(href="{{url_for('relay_basics')}}") Basics
          a.navbar-item(href="{{url_for('obsidian_plugin')}}") Plugin
      a.navbar-item(href="{{url_for('pricing')}}") Pricing
      a.navbar-item(href="{{url_for('blog')}}") Blog
    .navbar-end
      .navbar-item
        #switcher-default
      {% if user %}
      .navbar-item.has-dropdown.is-hoverable
        .navbar-link
         .button.is-warning
          span.icon
            figure.image.is-24x24
              img.is-rounded(src='{{user.profile_picture_url}}' alt="profile picture")
          span
            strong {{ user.username }}
        .navbar-dropdown
          a.navbar-item(href="{{url_for('profile')}}") Profile
          a.navbar-item(href="{{url_for('get_teams')}}") Teams
          a.navbar-item(href="{{url_for('my_documents')}}") Documents
          .navbar-item Assets&nbsp;&nbsp;
           .tag.is-danger.is-small soon
      .navbar-item
        a.button.is-primary(href='/logout')
          i.fas.fa-sign-out
      {% else %}
      .navbar-item
        .buttons
          a.button.is-primary(href='/register')
            span.icon
              i.fab.fa-github
            span
              strong Sign up
          a.button.is-light(href='/login/github')
            span.icon
              i.fab.fa-github
            span Log in
      {% endif %}

{% extends 'layout.pug' %} {% block title %}{{ name }} {% endblock %}
{% block content %}
.section
 .columns
  .column.is-8.is-offset-2
   .block
    .title.is-1 {{team.name}}
    .subtitle.is-5.text-icon
      {% if team.active_subscription %}
      span.icon-text
        span.icon
          ðŸ‘‘
        span Pro Team
      {% else %}
      span.icon-text
        span.icon
          i.fas.fa-globe
        span Team
      {% endif %}

   .block
    {% if user_repo.is_member(user, team) %}
    a(href="{{url_for('leave', team_name=team.name)}}").button.is-warning
      span.icon.is-small
        i.fas.fa-signature
      span Leave
    {% else %}
    {% if team.can(Permissions.can_join, user, membership) %}
    a(href="{{url_for('join', team_name=team.name)}}").button.is-primary
      span.icon.is-small
        i.fas.fa-signature
      span Join Team
    {% else %}
    p.notification.is-warning.is-light You cannot join this team. You must be invited.
    {% endif %}
    {% endif %}

    {% if user and team.user_id == user.id %}
    a(href="{{url_for('settings', team_name=team.name)}}").button.is-danger
     span.icon-text
      span.icon.is-small
       i.fas.fa-edit
      span Admin Setting
    {% endif %}

   .block
    .title.is-3 Description
    .box
     {% if team.headline %}
     p {{team.headline}}
     {% else %}
     p.is-italic no description provided
     {% endif %}

   {% if membership %}
   .block
    .title.is-3 Topics

    .columns.is-8.is-variable
      .column.is-half.has-text-left
        .title.is-5 Existing Topics in the team
        div(hx-ext="client-side-templates")
          template#list_topics
            {% raw %}
            {{#each this}}
            tr
             td {{name}}
             td
              {{#if subscribed}}
              input.switch.is-medium.is-rounded.is-success(type="checkbox" id="switch-{{id}}" 
                  hx-post="{{toggle_url}}" 
                  hx-swap="none"
                  checked="checked")
              {{else}}
              input.switch.is-medium.is-rounded.is-success(type="checkbox" id="switch-{{id}}"
                  hx-post="{{toggle_url}}"
                  hx-swap="none"
                  )
              {{/if}}
              label(for="switch-{{id}}")
              p(id="updated_subscription-{{id}}")
            {{/each}}
            {% endraw %}
          .field.is-horizontal
            .field-body
              .control.has-icons-left
                input.input#team_name(hx-get="{{url_for('api_list_topics_in_team', team_name=team.name)}}"
                  hx-swap="innerHTML"
                  hx-target="#table_content"
                  hx-trigger="input changed delay:500ms, search"
                  handlebars-array-template="list_topics"
                  placeholder="Search Topics"
                  name="search")
                span.icon.is-left
                 i.fas.fa-search
          table.table.is-narrow.is-striped(hx-get="{{url_for('api_list_topics_in_team', team_name=team.name)}}"
              hx-swap="innerHTML"
              hx-target="#table_content"
              hx-trigger="load, refresh-topics from:body"
              handlebars-array-template="list_topics")
            thead
              th Topic
              th Un-/Subscribe
            tbody#table_content
      .column.is-half.has-text-left
        .title.is-5 Topics / Subjects
        p.is-size-6.block Topics are subjects that you can use to narrow down a group of people in your team.
        p.is-size-6.block Team members subscribe to topics to receive documents shared on those subjects
        .subtitle.is-5.mb-1 Create a new topic
        .control.has-icons-left
          input.input#team_name(type="string" placeholder="New Topic" name="topic" hx-post="{{url_for('create_topic_htx', team_name=team.name)}}")
          span.icon.is-left
            i.fas.fa-plus


   {% endif %}

